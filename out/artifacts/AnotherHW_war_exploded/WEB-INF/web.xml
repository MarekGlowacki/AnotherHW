<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <listener>
        <listener-class>main.Excercises_web_app.Listeners.ContextListner</listener-class>
    </listener>
    <login-config>
        <auth-method>BASIC</auth-method>
    </login-config>
    <security-role>
        <role-name>admin-gui</role-name>
    </security-role>
    <security-role>
        <role-name>manager-gui</role-name>
    </security-role>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>RegulaBezpieczenstwa</web-resource-name>
            <url-pattern>*.jsp</url-pattern>
            <http-method>GET</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin-gui</role-name>
        </auth-constraint>
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <filter>
        <filter-name>FiltrRegulowy</filter-name>
        <filter-class>main.Excercises_web_app.Filters.FiltrRegulowy</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FiltrRegulowy</filter-name>
        <url-pattern>/Attribute1</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>log4jInit</servlet-name>
        <servlet-class>main.Excercises_web_app.Log4jInit</servlet-class>

        <init-param>
            <param-name>log4j-init-file</param-name>
            <param-value>WEB-INF/log4j.lcf</param-value>
        </init-param>

        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>log4jInit</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

</web-app>